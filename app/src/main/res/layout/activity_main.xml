<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/gone_test_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/gone_test_button"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/gone_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="training"
            android:textSize="14dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <Button
        android:id="@+id/gone_test_parent_gone"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toBottomOf="@+id/gone_test_container"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="180dp" />

    <Button
        android:id="@+id/gone_test_child_visible"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="196dp"
        app:layout_constraintTop_toBottomOf="@+id/gone_test_container"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="180dp" />

</androidx.constraintlayout.widget.ConstraintLayout>